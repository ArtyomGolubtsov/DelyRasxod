<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок на клавиатуре -->
    <style name="CustomKeyboardButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/keyboard_btn_bg</item>
    </style>



    <!-- Стиль для окошек ввода кода -->
    <style name="CodeDigitTextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:hint">*</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">#80b8b8b8</item>
        <item name="android:background">@drawable/input_pin_digit_bg</item>
    </style>

    <!-- Стиль для больших синих кнопок -->
    <style name="BigBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/btn_blue_bg</item>
    </style>


    <style name="CategoryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/ctgr_btn_bg</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:minHeight">200dp</item> <!-- минимальная высота -->
        <item name="behavior_peekHeight">200dp</item> <!-- высота в свернутом состоянии -->
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">20dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <!-- Стиль для всего меню -->
    <style name="AppPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/btn_grey_bg</item>
        <item name="android:textColor">@color/polycy_tips</item>
        <item name="android:titleTextColor">@color/polycy_tips</item>
    </style>

    <!-- Стиль для обычных пунктов -->
    <style name="AppMenuItem" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/polycy_tips</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!-- Стиль для опасных действий -->
    <style name="AppMenuItem.Destructive" parent="AppMenuItem">
        <item name="android:textColor">@color/alert_red</item>
    </style>

    <!-- Стиль для звездочек у контактов -->

    <style name="CustomContactsCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/mark_star</item>
        <item name="buttonTint">@color/color_checkbox_contacts</item>
    </style>

</resources>
