<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Фоновый градиент -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#0DB7DAFF"
                        android:endColor="#1AB7DAFF"
                        android:angle="-90"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@null"/>
                    <corners android:radius="16dp"/>
                    <stroke android:width="1dp" android:color="#0066FF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>