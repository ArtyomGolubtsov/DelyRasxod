<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".PasswordResetActivity">

    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сброс пароля"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textFontWeight="1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnGoBack"
        app:layout_constraintBottom_toBottomOf="@id/btnGoBack"/>

    <LinearLayout
        android:id="@+id/mainBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/userNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ФИО"
                android:textColor="@color/polycy_tips"
                android:textSize="16sp"
                android:labelFor="@id/userName"/>

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_person_outline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneNumberBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона"
                android:textColor="@color/polycy_tips"
                android:textSize="16sp"
                android:labelFor="@id/phoneNumber"/>

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:textColor="@color/white"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_phone_outline" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пожалуйста, введите свои ФИО и номер телефона. Мы отправим вам СМС с кодом подтверждения"
            android:textSize="14sp"
            android:textFontWeight="800"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/polycy_tips"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/BigBlueButton"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжить"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/ellipse1"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/ellipse_shape"
        android:rotation="-45"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="-150dp"
        />

    <ImageView
        android:id="@+id/ellipse2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/ellipse_shape"
        android:rotation="45"
        android:elevation="-10dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="-180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>