<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".SignInActivity">

    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textFontWeight="1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnGoBack"
        app:layout_constraintBottom_toBottomOf="@id/btnGoBack"/>

    <LinearLayout
        android:id="@+id/mainBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/phoneNumberBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона"
                android:textColor="@color/polycy_tips"
                android:textSize="16sp"
                android:labelFor="@id/phoneNumber"
                app:layout_constraintBottom_toTopOf="@id/phoneNumber"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:inputType="phone"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/mainTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_phone_outline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:textColor="@color/polycy_tips"
                android:textSize="16sp"
                android:labelFor="@id/phoneNumber"
                app:layout_constraintBottom_toTopOf="@id/phoneNumber"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="numberPassword"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/mainTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/ic_lock_outline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/remindMeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Запомните меня"
                android:textColor="@color/polycy_tips"
                android:textSize="20sp"
                android:textFontWeight="900"
                android:layout_weight="1"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/forgotPassBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыл пароль?"
                android:textSize="20sp"
                android:textColor="@color/dely_blue"
                android:textFontWeight="800"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/BigBlueButton"
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нет аккаунта? "
                android:textSize="16sp"
                android:textFontWeight="800"
                android:textColor="@color/polycy_tips"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/signUpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создать"
                android:textSize="16sp"
                android:textFontWeight="800"
                android:textColor="@color/dely_blue"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ellipse1"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/ellipse_shape"
        android:rotation="-45"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="-150dp"
        />

    <ImageView
        android:id="@+id/ellipse2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/ellipse_shape"
        android:rotation="45"
        android:elevation="-10dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="-180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>